<div class="container">
  <form {{action 'signup' on="submit"}}>
    <h1>Cadastrar</h1>

    <div class="form-group">
      <label>Login</label>
      {{input id='username' value=username class="form-control"}}
    </div>

    <div class="form-group">
      <label>Senha</label>
      {{input id='password' type='password' value=password class="form-control"}}
    </div>

    {{#if signupError}}
      <p> {{signupError}} </p>
    {{/if}}

    <button {{action 'signup' username password}} class="btn btn-info" disabled={{isSigningUp}}>
      {{#if isSigningUp}}
        Cadastrando...
      {{else}}
        Cadastrar
      {{/if}}
    </button>
  </form>
</div>
